{% extends 'base.html.twig' %}

{% block javascripts %}
     <script src="{{asset('js/pet_details.js')}}" defer></script> 
{% endblock %}

{% block body %}
<div id="details-wrapper" class="mt-4">
  <div class="row ml-2 mr-2">
  {% if pet.getPhotos() is null or pet.getPhotos() is empty %}

            {% else %}
                        {% for single in pet.getPhotos() %}
                        <div class="column">
                            <img src="{{asset('uploads/pets_images/' ~ single)}}" alt="..." onclick="myFunction(this);">
                        </div>
                        {% endfor %}

  {% endif %}
 </div>

<!-- The expanding image container -->
<div class="container-gallery">
  <!-- Close the image -->

  <!-- Expanded image -->
  <img id="expandedImg" style="width:80%" src="{{asset('uploads/pets_images/' ~ pet.getPhotos()[0])}}" alt="...">

  
</div>
</div>

{% endblock %}