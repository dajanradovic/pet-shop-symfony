{% extends 'base.html.twig' %}


{% block body %}

{% for message in app.flashes('notice') %}
    <div class="alert alert-success" role="alert">
 {{message}}
</div>
{% endfor %}
 

   {{ form_start(form, {'method': 'POST', 'multipart' : true}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.age) }}
        {{ form_row(form.description) }}
        {{ form_row(form.pet_photos) }}
   {{ form_end(form) }}
    
